%h3  Locations

.row
  .large-7.columns
    #map_canvas
      %script
        display_map(40.7316, -73.9901, 13);
      %br



  .large-5.columns
    = form_tag locations_path, :method => :get do
      = text_field_tag :search, params[:search]
      = submit_tag "Search Near", :name => nil

    %br

    - @locations.each do |location|
      %ul
        %li= location.name
        %li= location.address
        %script
          = "add_marker(#{location.latitude}, #{location.longitude}, '#{location.name}');"
          / = "locations.push({id:#{location.id}, name:'#{location.name}', address:#{location.address}, latitude:#{location.latitude}, longitude:#{location.longitude}});"